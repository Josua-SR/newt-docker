FROM ubuntu:wily
MAINTAINER runtime.io <contact@runtime.io>

ENV DEBIAN_FRONTEND noninteractive

# gcc-arm-none-eabi and gdb-arm-none-eabi are pulled from ppa:team-gcc-arm-embedded/ppa
RUN echo 'deb http://ppa.launchpad.net/team-gcc-arm-embedded/ppa/ubuntu wily main ' > /etc/apt/sources.list.d/gcc-arm-embedded-wily.list && \
    apt-key adv --keyserver keyserver.ubuntu.com --recv-keys F64D33B0  && \
    apt-get update && \
    apt-get install -y sudo \
                    git \
                    libc6-i386 \
                    gcc-multilib \
                    gcc-arm-none-eabi \
                    gdb-arm-none-eabi \
                    gdb \
                    openocd && \
    apt-get autoremove && \
    apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

COPY jlink_5.12.3_x86_64.deb /tmp/
RUN dpkg -i /tmp/jlink_5.12.3_x86_64.deb; dpkg-query -l; rm /tmp/jlink_5.12.3_x86_64.deb
